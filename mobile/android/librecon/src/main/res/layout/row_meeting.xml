<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/assistant_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meeting_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />
            <TextView
                android:id="@+id/meeting_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/meeting_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/meeting_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/meeting_moment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/meeting_where"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/meeting_point"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/meeting_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/grey_text_color"
                android:fontFamily="sans-serif" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>



